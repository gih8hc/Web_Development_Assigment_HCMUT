/*= Style for mainwindow START
  ==================================================== */
	#MainWindow {
		background-color: #fff;
	}
/*= END
  ==================================================== */
	#toggle1 {
		background: none;
		border: none;
	}
	#errorBox{
		background-color: #fff;
		color:#E72929;
		border: none;
	}
/*= Style for button to change menu style START
  ==================================================== */
	#change_btn {
		padding: 5px;
		border: none;
		width: 30px;
		height: 30px;
	}
/*= END
  ==================================================== */

/*= Style for header widget START
  ==================================================== */
	#widget {
		background-color: #f9fafd;
	}
/*= END
  ==================================================== */
	
/*= Style for menu with icon only START
  ==================================================== */
  	/* style for widget */
	#icon_only_widget {
		background-color: #344955;
		width:60px;
	}
    /* style for QPushButton and QLabel */ 

	#icon_only_widget QPushButton {
		height: 40px;
		width:40px;
		border:none;
		border-radius: 6px;
		text-align: center;
		padding: 0px 0px 0px 0px;


	}

	#icon_only_widget QPushButton:hover {
		background-color: rgba( 86, 101, 115, 0.5);
	}
	#icon_only_widget QPushButton:checked {
		color: #00224D;
		background-color:#f2f5f7;
		/* border-top-left-radius: 25%;
		border-bottom-left-radius: 25%; */

	}

	/* style for logo image */
	#logo_label_1 {
		padding: 5px;

		/* margin: 5px; */
	}
/*= END
  ==================================================== */

/*= Style for menu with icon and text START
  ==================================================== */
	/* style for widget */
	#full_menu_widget {
		background-color: #344955;
	}
	/* #change_button{
		background: none;
		border:none;
	} */
	/* style for QPushButton */
	#full_menu_widget QPushButton {
		border:none;
		border-radius: 6px;
		text-align: left;
		padding: 8px 0 8px 15px;
		/* margin: 3px 6px 3px 6px; */
		color: #fff;
	}

	#full_menu_widget QPushButton:hover {
		background-color: rgba( 86, 101, 115, 0.5);
	}

	#full_menu_widget QPushButton:checked {
		color: #00224D;
		background-color:#f2f5f7;
	}

	/* style for logo image */
	#logo_label_2 {
		padding: 5px;
		color: #fff;
	}

	/* style for APP title */
	#logo_label_3 {
		padding-right: 10px;
		color: #fff;
	}
/*= END
  ==================================================== */

/*= Style for search button START
  ==================================================== */
	#search_btn {
		border: none;
	}
/*= END
  ==================================================== */

/*= Style for search input START
  ==================================================== */
	#search_input {
		border: none;
		padding: 5px 10px;
	}

	#search_input:focus {
		background-color: #70B9FE;
	}
/*= END
  ==================================================== */

/*= Style for user information button START
  ==================================================== */
	#user_btn {
		border: none;
	}
